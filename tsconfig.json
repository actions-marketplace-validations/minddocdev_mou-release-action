{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "paths": {
      "@minddocdev/mou-release-action/*": ["src/*"],
      "@minddocdev/mou-release-action/test/*": ["test/*"]
    },
    "rootDir": ".",
    "strict": true,
    "target": "esnext",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
}
